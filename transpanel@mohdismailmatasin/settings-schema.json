{
  "section-general": {
    "type": "section",
    "description": "General"
  },
  "always-transparent": {
    "type": "switch",
    "default": true,
    "description": "Always make panels transparent (On/Off)"
  },
  "first-launch": {
    "type": "bool",
    "default": true,
    "description": "First launch flag"
  },
  "section-opacity": {
    "type": "section",
    "description": "Panel Opacity Settings"
  },
  "opacity-description": {
    "type": "description",
    "description": "Adjust the opacity for each panel individually. 0% = fully transparent, 100% = fully opaque."
  },
  "panel-top-opacity": {
    "type": "scale",
    "default": 0,
    "min": 0,
    "max": 100,
    "step": 5,
    "description": "Top panel opacity (%)"
  },
  "panel-bottom-opacity": {
    "type": "scale",
    "default": 0,
    "min": 0,
    "max": 100,
    "step": 5,
    "description": "Bottom panel opacity (%)"
  },
  "panel-left-opacity": {
    "type": "scale",
    "default": 0,
    "min": 0,
    "max": 100,
    "step": 5,
    "description": "Left panel opacity (%)"
  },
  "panel-right-opacity": {
    "type": "scale",
    "default": 0,
    "min": 0,
    "max": 100,
    "step": 5,
    "description": "Right panel opacity (%)"
  },
  "section-colors": {
    "type": "section",
    "description": "Panel Color Settings"
  },
  "use-custom-colors": {
    "type": "switch",
    "default": false,
    "description": "Use custom panel colors"
  },
  "color-description": {
    "type": "description",
    "description": "Customize the color of each panel individually. When disabled, panels will use the default black color."
  },
  "global-panel-color": {
    "type": "colorchooser",
    "default": "rgba(0,0,0,1.0)",
    "description": "Global panel color (applies to all panels when individual colors are not set)",
    "dependency": "use-custom-colors"
  },
  "panel-top-color": {
    "type": "colorchooser",
    "default": "rgba(0,0,0,1.0)",
    "description": "Top panel color (leave as default to use global color)",
    "dependency": "use-custom-colors"
  },
  "panel-bottom-color": {
    "type": "colorchooser",
    "default": "rgba(0,0,0,1.0)",
    "description": "Bottom panel color (leave as default to use global color)",
    "dependency": "use-custom-colors"
  },
  "panel-left-color": {
    "type": "colorchooser",
    "default": "rgba(0,0,0,1.0)",
    "description": "Left panel color (leave as default to use global color)",
    "dependency": "use-custom-colors"
  },
  "panel-right-color": {
    "type": "colorchooser",
    "default": "rgba(0,0,0,1.0)",
    "description": "Right panel color (leave as default to use global color)",
    "dependency": "use-custom-colors"
  },
  "section-advanced": {
    "type": "section",
    "description": "Advanced Settings"
  },
  "maximized-opacity": {
    "type": "scale",
    "default": 80,
    "min": 0,
    "max": 100,
    "step": 5,
    "description": "Panel opacity when window is maximized (%)"
  },
  "animation-duration": {
    "type": "scale",
    "default": 200,
    "min": 0,
    "max": 1000,
    "step": 50,
    "description": "Animation duration (ms)"
  }
}